@* ABOUT index*@
@model HomeVM




<section class="about-section section-padding" id="section_2">
    <div class="container">
        <div class="row">

            <div class="col-lg-6 col-12 mb-4 mb-lg-0 d-flex align-items-center">
                <div class="services-info">
                    <h2 class="text-white mb-4">@Model.About?.Title</h2>

                    <p class="text-white">@Model.About?.FirstText</p>

                    <h6 class="text-white mt-4">@Model.About?.SecondTitle</h6>

                    <p class="text-white">@Model.About?.SecondText</p>

                    <h6 class="text-white mt-4">@Model.About?.ThirdTitle</h6>

                    <p class="text-white">@Model.About?.ThirdText</p>
                </div>
            </div>

            <div class="col-lg-6 col-12">
                <div class="about-text-wrap">
                    <img src="~/images/@Model.About?.Image" class="about-image img-fluid">

                    <div class="about-text-info d-flex">
                        <div class="d-flex">
                            <i class="about-text-icon bi-person"></i>
                        </div>


                        <div class="ms-4">
                            <h3>@Model.About?.ImageTitle</h3>

                            <p class="mb-0">@Model.About?.ImageText</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


